<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SignInFragment">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="COINY"
        android:textColor="#323232"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:textSize="30sp"
        android:textColor="#323232"
        android:fontFamily="@font/montserrat"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="260dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход \nпо номеру телефона"
        android:textSize="18sp"
        android:textColor="#4C4C4C"
        android:layout_marginTop="340dp"
        android:layout_marginStart="50sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E70101"
        android:text="Пароль неверный"
        android:visibility="gone"
        android:textSize="12sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="440dp"/>

    <br.com.sapereaude.maskedEditText.MaskedEditText
        android:id="@+id/telephone_number"
        android:layout_marginTop="401dp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="53sp"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        mask:allowed_chars="1234567890"
        mask:mask="+7 | (###) ###-##-##"
        android:hint="1234567890"
        app:keep_hint="true"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        android:paddingStart="6sp"
        android:paddingEnd="6sp"
        android:background="@drawable/edittext_back"
        android:textColorHint="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:hint="Пароль"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="53dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/black"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"
        android:background="@drawable/edittext_back"
        android:layout_marginTop="461dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/follow"
        android:text="Вход | Регистрация"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="528dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="или авторизуйся с\nпомощью"
        android:textColor="#323232"
        android:textSize="14sp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="590dp"/>

    <ImageView
        android:id="@+id/google"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/google"
        android:layout_marginTop="630dp"
        android:layout_marginStart="50dp"/>

    <ImageView
        android:id="@+id/twitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/twitter"
        android:layout_marginTop="630dp"
        android:layout_marginStart="130dp"/>

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/facebook"
        android:layout_marginTop="630dp"
        android:layout_marginStart="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Я принимаю условия"
        android:textColor="#323232"
        android:textSize="10dp"
        android:layout_marginTop="670dp"
        android:layout_marginStart="90dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="политики конфиденциальности"
        android:textColor="#01B7E7"
        android:layout_marginTop="670dp"
        android:layout_marginStart="193dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="и"
        android:textColor="#323232"
        android:textSize="10dp"
        android:layout_marginTop="670dp"
        android:layout_marginStart="348dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="на"
        android:textColor="#323232"
        android:textSize="10dp"
        android:layout_marginTop="680dp"
        android:layout_marginStart="90dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="обработку персональных данных"
        android:textColor="#01B7E7"
        android:layout_marginTop="680dp"
        android:layout_marginStart="103dp"/>

</FrameLayout>