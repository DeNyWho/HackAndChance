<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_marginBottom="1400dp"
        android:src="@drawable/image_6"/>

    <View
        android:layout_marginTop="93dp"
        android:background="@drawable/background_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_marginTop="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/man"/>
    <TextView
        android:id="@+id/follower_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="1.5 млн."
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:layout_marginStart="42dp"
        android:layout_marginTop="106dp"/>

    <TextView
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:id="@+id/pub_count"
        android:layout_marginTop="106dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginStart="300dp"
        android:text="47"/>

    <TextView
        android:layout_marginTop="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="30sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:text="Подписчиков"/>

    <TextView
        android:layout_marginTop="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="270sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:text="Публикаций"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Антонов Илья"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="190dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat"/>

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/ver"
        android:layout_marginTop="190dp"
        android:layout_marginStart="300dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginStart="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_button"
        android:text="Написать"
        android:fontFamily="@font/montserrat"
        android:textSize="14sp"
        android:layout_marginTop="235dp"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginEnd="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/follow"
        android:text="Написать"
        android:fontFamily="@font/montserrat"
        android:textSize="14sp"
        android:layout_marginTop="235dp"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat"
        android:text="Истории"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="285dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_marginTop="315dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat"
        android:text="Публикации"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="385dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="420dp"
        android:layout_width="match_parent"
        android:layout_height="310dp"/>

</FrameLayout>