<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SingUpFragment">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:fontFamily="@font/montserrat"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#323232"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/follow"
        android:text = "Введи свое имя"
        android:textColor="@color/white"
        android:paddingTop="4dp"
        android:paddingStart="16sp"
        android:textSize="19sp"
        android:paddingEnd="16sp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="150dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="▼"
        android:textColor="#01B7E7"
        android:rotation="45"
        android:layout_marginTop="80dp"
        android:layout_marginStart="23dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="▼"
        android:textColor="#000000"
        android:rotation="-165"
        android:layout_marginTop="147dp"
        android:layout_marginStart="355dp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="30dp"
        android:hint="Имя"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="@drawable/reg_edit"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="4dp"
        android:background="@drawable/follow"
        android:text ="Привет!, Илья"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="150dp"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/under_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="▼"
        android:textColor="#01B7E7"
        android:rotation="45"
        android:layout_marginTop="210dp"
        android:layout_marginStart="23dp"/>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/password"
        android:layout_marginTop="270dp"
        android:layout_marginStart="33dp"
        android:layout_width="305dp"
        android:layout_height="209dp"
        android:background="@drawable/follow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="Введи свой пароль"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:fontFamily="@font/montserrat"/>
        
        <EditText
            android:id="@+id/reg_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/reg_edit"
            android:layout_marginTop="60sp"
            android:layout_marginStart="20dp"
            android:hint="********"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="В пароле должна быть одна цифра"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="130sp"
            android:layout_marginStart="60dp"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/first"
            android:layout_width="25dp"
            android:layout_marginTop="125dp"
            android:layout_marginStart="25sp"
            android:layout_height="25dp"
            android:src="@drawable/ellipse_6" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="125dp"
            android:src="@drawable/check"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/second"
            android:layout_width="25dp"
            android:layout_marginTop="160dp"
            android:layout_marginStart="25sp"
            android:layout_height="25dp"
            android:src="@drawable/ellipse_6" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/check"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Пароль должен быть больше 7\n символов"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="160sp"
            android:layout_marginStart="60dp"/>
        


    </FrameLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/under_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:text="▼"
        android:textColor="#01B7E7"
        android:rotation="45"
        android:layout_marginTop="445dp"
        android:layout_marginStart="23dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="gone"
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/follow"
        android:layout_marginTop="670dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:text="Далее"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat"/>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/emailFrame"
        android:layout_marginStart="33dp"
        android:layout_width="305dp"
        android:layout_height="150dp"
        android:background="@drawable/follow"
        android:layout_marginTop="500dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="@font/montserrat"
            android:text="Введи свою эл.почту"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="30dp"
            android:hint="Электронная почта"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/reg_edit"/>

        <ImageView
            android:visibility="gone"
            android:layout_marginStart="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="106dp"
            android:id="@+id/third"
            android:src="@drawable/ellipse_6"/>

        <ImageView
            android:layout_marginStart="15dp"
            android:layout_marginTop="106dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/check"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Эл почта должна иметь вид:\n ...@domain.ru"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="100sp"
            android:layout_marginStart="50dp"/>
    </FrameLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/under_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:text="▼"
        android:textColor="#01B7E7"
        android:rotation="45"
        android:layout_marginTop="617dp"
        android:layout_marginStart="23dp"/>



</FrameLayout>